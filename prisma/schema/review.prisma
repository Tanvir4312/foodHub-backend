model Review {
    id      String @id @default(uuid())
    name    String @default("")
    rating  Int
    comment String
    meal_id String
    meal    Meal   @relation(fields: [meal_id], references: [id], onDelete: Cascade)
    user_id String
    user    User   @relation(fields: [user_id], references: [id])

    @@map("reviews")
}
