model ProviderProfile {
    id           Int      @id @default(autoincrement())
    name         String @db.VarChar(50)
    description  String?
    logo_url     String?
    location     String
    phone_number String? @db.VarChar(15)
    user_id      Int      @unique
    user         User     @relation(fields: [user_id], references: [id])
    meals        Meal[]
    orders       Order[]

    @@map("providersProfile")
}