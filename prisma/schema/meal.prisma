model Meal {
    id            String            @id @default(uuid())
    name          String            @db.VarChar(50)
    description   String
    price         Float
    image_url     String?
    isAvailable   Boolean           @default(true)
    dietary       DietaryPreference
    isDeleted     Boolean           @default(false)
    averageRating Float             @default(0)
    totalReviews  Float             @default(0)
    provider_id   String
    provider      ProviderProfile   @relation(fields: [provider_id], references: [id])
    category_id   String
    categories    Category          @relation(fields: [category_id], references: [id], onDelete: Cascade)
    reviews       Review[]
    orderItems    orderItem[]
    cartItems     CartItem[]

    @@map("meals")
}

enum DietaryPreference {
    VEGAN
    VEGETARIAN
    GLUTEN_FREE
    KETO
    NON_VEGETARIAN
    DAIRY_FREE
    NUT_FREE
    EGG_FREE
    LOW_CARB
    LOW_FAT
    HIGH_PROTEIN
}
