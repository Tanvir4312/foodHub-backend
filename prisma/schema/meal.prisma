model Meal {
    id        String        @id @default(uuid())
    name        String          @db.VarChar(50)
    description String
    price       Float
    image_url   String?
    isAvailable Boolean         @default(true)
    provider_id String
    provider    ProviderProfile @relation(fields: [provider_id], references: [id])
    category_id String
    categories  Category        @relation(fields: [category_id], references: [id])
    reviews     Review[]

    
     @@map("meals")
}
